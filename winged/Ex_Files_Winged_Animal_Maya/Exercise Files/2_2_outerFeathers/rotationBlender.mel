global proc rotationBlender(){// Version 1.0// By Jason Baskin// jason@jasonbaskin.com// averages the rotation of two objects and connects this value to a third object using a blend color node// usage: select two blend sources, then target object, and execute script$sel = `ls -sl`;$size = `size ($sel)`;if ($size != 3)print "Please select just three items (the blend target should be selected last)";	else	{	$colorBlend = `shadingNode -asUtility blendColors`;	connectAttr ($sel[0]+".rx") ($colorBlend+".color1R");	connectAttr ($sel[0]+".ry") ($colorBlend+".color1G");	connectAttr ($sel[0]+".rz") ($colorBlend+".color1B");	connectAttr ($sel[1]+".rx") ($colorBlend+".color2R");	connectAttr ($sel[1]+".ry") ($colorBlend+".color2G");	connectAttr ($sel[1]+".rz") ($colorBlend+".color2B");	connectAttr ($colorBlend+".outputR") ($sel[2]+".rx");	connectAttr ($colorBlend+".outputG") ($sel[2]+".ry");	connectAttr ($colorBlend+".outputB") ($sel[2]+".rz");	addAttr  -min 0 -max 1 -dv .5 -ln "blend"  -at double -keyable true $sel[2];	connectAttr ($sel[2]+".blend") ($colorBlend+".blender");	select -r $sel;	}}rotationBlender;